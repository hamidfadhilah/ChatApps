<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_margin="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/authui_colorPrimary" />

        <TextView
            android:id="@+id/tvNameProject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:text="My Project Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/buttonTextColor" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvStatus"
            android:layout_alignBottom="@+id/tvStatus"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:text="Status :"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:accessibilityLiveRegion="15"
            android:text="Status"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:layout_below="@+id/textView19"
            android:layout_toRightOf="@+id/textView20"
            android:layout_toEndOf="@+id/textView20"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp" />

        <Button
            android:id="@+id/bEdit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/tvStatus"
            android:layout_alignBottom="@+id/tvStatus"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="35dp"
            android:layout_toLeftOf="@+id/bDelete"
            android:layout_toStartOf="@+id/bDelete"
            android:background="@drawable/edit" />

        <Button
            android:id="@+id/bDelete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/bEdit"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/delete" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
